@model IEnumerable<P.Proyect.Models.CARGOS>

@{
    ViewBag.Title = "Index";
}

<h2>Cargo</h2>

<p>
    @Html.ActionLink("Añadir ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cargos }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Cargos }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Cargos })
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("ExportCargo", "CARGOS", FormMethod.Post))
{
    <div class="form-group">

        <input type="submit" value="Reporte PDF" class="btn btn-danger" />
        @Html.ActionLink("Regresar", "IndexReportes", "", new { @class = "btn btn-form" })


    </div>
}
