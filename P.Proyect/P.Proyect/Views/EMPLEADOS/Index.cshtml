@model IEnumerable<P.Proyect.Models.EMPLEADOS>

@{
    ViewBag.Title = "Index";
}

<h2>Empleados</h2>

<p>
    @Html.ActionLink("Añadir", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CARGOS.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DEPARTAMENTOS.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CARGOS.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DEPARTAMENTOS.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Empleado }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Empleado }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Empleado })
            </td>
        </tr>
    }


</table>

@using (Html.BeginForm("ExportEmpleados", "EMPLEADOS", FormMethod.Post))
{
    <div class="form-group">
       
            <input type="submit" value="Reporte PDF" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "IndexReportes", "", new { @class = "btn btn-form" })
       
       
    </div>
}
